# Database Configuration
DATABASE_URL=postgresql://vending_user:vending_pass@localhost:5432/vending_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_PRIVATE_KEY_PATH=./jwt_private.pem
JWT_PUBLIC_KEY_PATH=./jwt_public.pem
JWT_ALGORITHM=RS256
JWT_EXPIRE_MINUTES=10

# BTCPay Server Configuration
# Get these values from your BTCPay Server instance:
# 1. Go to your BTCPay Server dashboard
# 2. Navigate to Store Settings > Access Tokens
# 3. Create a new API key with permissions: btcpay.store.canmodifyinvoices
# 4. Copy the Store ID from Store Settings
BTCPAY_BASE_URL=https://your-btcpay-server.com
BTCPAY_API_KEY=your_btcpay_api_key_here
BTCPAY_STORE_ID=your_store_id_here
BTCPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Payment Configuration
PAYMENT_MONITOR_SECONDS=120
PAYMENT_POLL_INTERVAL_SECONDS=5

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Rate Limiting Configuration
RATE_LIMIT_AUTH_PER_MINUTE=5
RATE_LIMIT_PAYMENTS_PER_MINUTE=60

